@import '_settings'

#diaporama
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    overflow hidden
    img
        width 100%
        position absolute
        opacity 0
        transition opacity 5s ease
        &.active
            opacity 1
    +below(responsive.medium)
        position relative
        top auto
        left auto
        height 200px
            