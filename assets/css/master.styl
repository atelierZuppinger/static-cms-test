@import 'functions'
@import 'jeet'
@import '_settings'

normalize-css()
base()

body
  background-color grey
  &.darkRed
    background-color darkRed
    #content
      h1, h2, h3
        color yellow
      p 
        color white

h1,h2,h3,h4,h5,p
  margin-top 0

h3, h2
  font-family laurenscriptregular
  font-size: fontsize.h3
  margin-top (base-line-height/2)
  margin-bottom 0
  color grey
  &.red
    color red
h4
  font-family arial
  font-weight bold
  font-size: fontsize.h4
  margin-top padding
  color black
h5
  font-size: fontsize.h2
  color red
  font-weight bold
  margin-bottom padding
p
  color black
  font-size: fontsize.p
a
  color red
  font-style italic
  text-decoration none
  font-size: fontsize.p
  &:hover
    color black
  &.light
      color greyLight
      &:hover
        color white

#left
  span(1/3)
  height 100%
  position fixed
  background-color alpha(white, .9)
  z-index 12
  &:before
    content ''
    position absolute
    width 15px
    height 100%
    background-color transparent
    background-image linear-gradient(left, rgba(0,0,0,.3) 0%, rgba(0,0,0,0) 100%)
    top 0
    right -15px
  .mask
    height 100%
    position relative
    overflow auto
  #menu-container
    padding gutter gutter
  #logo
    margin gutter auto (gutter/2) auto
    padding-bottom gutter*.5
    display block
    width 80%
    img
      position relative
      width 100%
  #menu
    margin-top gutter
    background-color white
    padding 10px
    a
      display block
      padding padding padding padding 0
      border-top border
      border-bottom border
      margin-bottom gutter
      &:before
        content '>'
        display inline
        padding-right padding
#right
  span(ratio:2/3,offset:1/3)
  footer
    cf()
    width (100% * 2/3)
    position fixed
    bottom 0
    background-color greyDark
    color greyLight
    padding padding*2 0
    #footer-container
      padding 0 gutter
      div
        span(1/4)
    a
      font-size: fontsize.small
      text-decoration underline
      font-style normal
  #content
    padding gutter*2 gutter 0 gutter
    h2
      border-bottom 1px solid yellow
      margin-bottom padding*2
      padding-bottom 1px
    h3
      font-family arial
      font-weight bold
      font-size: fontsize.h4
    img
      width 100%
      margin-bottom base-line-height
  .col
    &.half
      col(ratios: 1/2)